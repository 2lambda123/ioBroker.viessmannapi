{
	//"compileOnSave": true,
	"compilerOptions": {
		"noEmit": true,
		"noEmitOnError": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./dist",
		"baseUrl": "./src",
		"removeComments": false,
		"jsx": "react",

		"strict": true,
		"noImplicitThis": false,

		// enable the new reflection API
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,

		"resolveJsonModule": true,

		"sourceMap": true,
		"inlineSourceMap": false,
		"target": "es6"
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"dist/**",
		"node_modules/**"
	]
}